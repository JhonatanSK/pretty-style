<div class="address-container">
  	<div class="container">
  		<div class="col-md-12 header">
  			<div class="row content">
	  			<div class="title">
	  				<label>Cadastrar endereço</label>
	  			</div>
	  			<div class="line">
	  				<hr />
	  			</div>
  			</div>
  		</div>
  		<div class="jumbotron main">
  			<div class="col-md-12 content">
  				<div class="row">
  					<div class="col-md-6 destination-area">
	  					<label for="name">Nome do destinatário<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="name" placeholder="Como você gostaria de ser chamado?" />
	  				</div>
	  				<div class="col-md-6 cep-area">
	  					<label for="cep">Cep<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="cep" placeholder="digite o cep" />
	  				</div>
  				</div>
  				<div class="row">
  					<div class="col-md-4 name-area">
	  					<label for="place">Logradouro<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="place" placeholder="Ex.: Rua, . . ." />
	  				</div>
	  				<div class="col-md-2">
	  					<label for="number">Número<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="number" placeholder="Ex.: 28" />
	  				</div>
	  				<div class="col-md-6 neighborhood-area">
	  					<label for="neighborhood">Bairro<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="neighborhood" placeholder="Seu bairro" />
	  				</div>
  				</div>
  				<div class="row">
  					<div class="col-md-6 city-area">
	  					<label for="city">Cidade<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="city" placeholder="Sua cidade" />
	  				</div>
	  				<div class="col-md-6 state-area">
	  					<label for="state">Estado<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="state" placeholder="Seu estado" />
	  				</div>
  				</div>
				<div class="row">
					<div class="col-md-6 country-area">
	  					<label for="country">País<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="country" placeholder="Seu país" />
	  				</div>
	  				<div class="col-md-6 complement-area">
	  					<label for="complement">Complemento<span style="color: #ff0000; margin-left: 5px;">*</span></label>
	  					<input class="form-control" id="complement" placeholder="Algum complento para facilitar a localização" />
	  				</div>
				</div>
	  			<div class="row button-area">
  					<button type="button">SALVAR</button>
  				</div>
  			</div>
		</div>
  	</div>
</div>
